<form action="/users/<%= action === 'Modifier' ? 'edit/' + (user ? user.email : '') : 'new' %>" method="POST">
    <label>Email :</label>
    <input type="email" name="email" value="<%= user ? user.email : '' %>" required <%= action === 'Modifier' ? 'readonly' : '' %>><br>

    <label>Nom d'utilisateur :</label>
    <input type="text" name="username" value="<%= user ? user.username : '' %>" required><br>

    <label>Mot de passe :</label>
    <input type="password" name="password" <%= action === 'Modifier' ? '' : 'required' %>><br>

    <button type="submit"><%= action %></button>
</form>

